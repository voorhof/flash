{
    "name": "voorhof/flash",
    "description": "A simple flash message service for Laravel applications, using Bootstrap alerts",
    "keywords": ["laravel", "flash", "alert", "bootstrap", "blade"],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/voorhof/flash/issues",
        "source": "https://github.com/voorhof/flash"
    },
    "authors": [
        {
            "name": "David Carton",
            "email": "david@notrac.be"
        }
    ],
    "require": {
        "php": "^8.3|^8.4|^8.5",
        "illuminate/support": "^12.0"
    },
    "require-dev": {
        "laravel/framework": "^12.50",
        "orchestra/testbench": "^10.9",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Voorhof\\Flash\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Voorhof\\Flash\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Voorhof\\Flash\\FlashServiceProvider"
            ],
            "aliases": {
                "Flash": "Voorhof\\Flash\\Facades\\Flash"
            }
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
